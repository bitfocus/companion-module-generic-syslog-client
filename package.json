{
	"name": "generic-syslog-client",
	"version": "1.0.0",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "run build && companion-module-build",
		"build": "rimraf dist && run build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "run lint:raw ."
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/phillipivan/companion-module-generic-syslog-client.git"
	},
	"dependencies": {
		"@companion-module/base": "~1.11.3",
		"@phillipivan/syslog-client": "^1.2.0",
		"p-queue": "^8.1.0"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.1.1",
		"@types/node": "^22.13.7",
		"eslint": "^9.21.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"prettier": "^3.5.2",
		"rimraf": "^6.0.1",
		"typescript": "~5.7.3",
		"typescript-eslint": "^8.25.0"
	},
	"engines": {
		"node": "^22.14"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"packageManager": "yarn@4.6.0"
}
